<div class="login-container">
    <h2>Electrician Project Estimator</h2>
    <div id="loginSuccess" class="login-success">
        Login successful! Welcome to your project dashboard.
    </div>
    <div id="loginError" class="login-error">
        Invalid username or password. Please try again.
    </div>
    <form id="loginForm">
        <input type="text" id="username" placeholder="Username" value="DN" required>
        <input type="password" id="password" placeholder="Password" value="AWESOME" required>
        <button type="submit">Log In</button>   
    </form>
    <div class="links">
        <button class="singh" onclick="signup()">Sign up</button>
    </div>
    
